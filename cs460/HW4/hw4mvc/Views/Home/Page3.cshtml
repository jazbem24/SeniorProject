@{
    ViewBag.Title = "Page3";
 }
  <h2 align="center">Loan Calculator</h2>
        <p1> 
         Here, calculate your monthly payment amounts based on the number of years for your loan and loan amount. 
        </p1>
        <br>
        
    <form method="post" action="Page3">
    <label for="amount">Loan Amount</label>
    <input type="number" step="0.01" name="amount" value="" />
    <label for="interestRate">Interest Rate</label>
    <input type="number" step="0.01" name="interestRate" value="" />
    <label for="termLength">Number of Years</label>
    <input type="number" step="0.01" name="numOfYears" value="" />
    <input type="submit" name="submit" value="Submit" />
</form>
 <br>
  <br>
   <br>


<!--Gets the answer from the viewbag or the error message-->
<p>
    Monthly Payments:$ @ViewBag.Answer
</p>